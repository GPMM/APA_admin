<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBD9D9"
    tools:context=".TermoActivity">


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="380dp"
        android:layout_height="88dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginBottom="35dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoTermo"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/radioYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/termo_aceito"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="628dp" />

        <RadioButton
            android:id="@+id/radioNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/termo_negado" />

    </RadioGroup>

    <TextView
        android:id="@+id/textoTermo"
        android:layout_width="380dp"
        android:layout_height="475dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="#FFFFFF"
        android:hapticFeedbackEnabled="false"
        android:padding="20dp"
        android:scrollbars="vertical"
        android:shadowColor="#00424242"
        android:shadowRadius="0.5"
        android:text='Você está sendo convidado(a) a participar da pesquisa sobre Estilos de Aprendizagem dos alunos do curso técnico integrado de informática do Cefet-RJ. Para isto será aplicado um questionário denominado Questionário Honey-Alonso que tem como objetivo verificar o seu estilo de aprendizagem e qual a relação entre  ele e a aprendizagem de programação por meio do desenvolvimento de jogos digitais.\nSua participação neste estudo consistirá apenas em responder ao questionário digital e sua colaboração será de muita importância. Você não será penalizado(a) caso não queira participar e poderá deixar de responder a qualquer momento bastando para isso sair do site.\nOs dados obtidos por meio do questionário são confidenciais e não serão divulgados em nível individual, visando assegurar o sigilo da sua participação.\nCaso você concorde em participar selecione a primeira opção "Declaro que li... " e você será direcionado à página do questionário; caso contrário, selecione a opção “Não aceito participar”.  '
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="16sp"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloTermo" />

    <TextView
        android:id="@+id/tituloTermo"
        android:layout_width="390dp"
        android:layout_height="27dp"
        android:text="TERMO DE CONSENTIMENTO LIVRE E ESCLARECIDO"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#353434"
        android:textSize="15sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />


</androidx.constraintlayout.widget.ConstraintLayout>